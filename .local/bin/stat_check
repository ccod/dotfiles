#! /bin/sh

Battery() {
	BATPERC=$(acpi --battery | cut -d, -f2 | sed 's/[^0-9]*//g')

	if [ $BATPERC -lt 101 ]
	then
		MSG="\uf240 $BATPERC%"
	fi
	if [ $BATPERC -lt 93 ]
	then
		MSG="\uf241 $BATPERC%"
	fi
	if [ $BATPERC -lt 75 ]
	then
		MSG="\uf242 $BATPERC%"
	fi
	if [ $BATPERC -lt 50 ]
	then
		MSG="\uf243 $BATPERC%"
	fi
	if [ $BATPERC -lt 25 ]
	then
		MSG="\uf244 $BATPERC%"
	fi

	echo -n "$MSG"
}

Clock() {
	TIME=$(date "+%a %b %d, %T")
	echo -n "\uf017 $TIME"
}

Cal() {
	DATE=$(date "+%a, %m %B %Y")
	echo -n "\uf073 $DATE"
}

{
	echo -e "%{c}$(Clock)%{r}$(Battery)  "
	sleep 3
} | lemonbar -d -B "#f1f1f1" -F "#424242" -f "Fira Code:pixelsize=12:style=SemiBold" -f "Font Awesome"
